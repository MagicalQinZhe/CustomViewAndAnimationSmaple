<?xml version="1.0" encoding="utf-8"?>
<zhe.qin.viewandanimation.widget.SpannableGridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:column_count="5"
    app:row_count="4"
    app:column_divider="#f00"
    app:row_divider="#0f0"
    app:row_divider_size="1dp"
    app:column_divider_size="1dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:column="0"
        app:row="0"
        android:gravity="center"
        android:text="1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:column="0"
        app:row="1"
        app:column_span="2"
        android:gravity="center"
        android:text="2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:column="3"
        app:row="1"
        app:row_span="3"
        android:gravity="center"
        android:text="3"
        />

</zhe.qin.viewandanimation.widget.SpannableGridLayout>